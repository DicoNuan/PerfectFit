<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#1AE68B</item>
        <item name="actionMenuTextColor">#1AE68B</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.NoActionBar">
        <item name="actionMenuTextColor">#1AE68B</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowButton</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">#1AE68B</item>
    </style>

    <style name="ProfileContentStyle">
        <item name="android:layout_marginTop">@dimen/profile_top_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/profile_content_padding</item>
        <item name="android:paddingRight">@dimen/profile_content_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/profile_title_margin</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ProfileContentText" parent="ProfileTitleStyle">
        <item name="android:layout_marginTop">@dimen/profile_top_margin</item>
        <item name="android:layout_marginRight">@dimen/profile_title_margin</item>
        <item name="android:textColor">@color/colorContentText</item>
    </style>

    <style name="ProfileButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/shape_profile_button</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="ProfileTabText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TrackingInfoText" parent="ProfileTabText">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ReviewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetText" parent="ReviewText">
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ReviewRating" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:rating">0</item>
    </style>


    <style name="TrackingValueText" parent="ProfileTabText">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>


    <style name="OverFlowButton">
        <item name="android:src">@drawable/ic_more</item>
        <item name="android:padding">5dp</item>
    </style>


</resources>
