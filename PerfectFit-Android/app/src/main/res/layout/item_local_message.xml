<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="horizontal"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_local_message">

        <TextView
            android:id="@+id/textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/chat_message_bottom_margin"
            android:layout_marginEnd="@dimen/chat_message_end_margin"
            android:layout_marginRight="@dimen/chat_message_end_margin"
            android:padding="@dimen/chat_message_padding"
            android:maxWidth="@dimen/chat_message_max_width"
            android:text="sdalksdj asd kjasd "
            android:textColor="@color/white"
            android:textSize="@dimen/chat_message_text_size" />

        <TextView
            android:id="@+id/textview_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/chat_timestamp_end_margin"
            android:layout_marginRight="@dimen/chat_timestamp_end_margin"
            android:text="12:32"
            android:textColor="@color/white"
            android:textSize="@dimen/chat_timestamp_text_size" />
    </FrameLayout>


    <ImageView
        android:id="@+id/imageview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_check_circled" />
</LinearLayout>