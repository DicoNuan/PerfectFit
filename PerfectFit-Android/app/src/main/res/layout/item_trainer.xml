<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageview_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:src="@raw/profile1" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/imageview_profile_pic"
            android:layout_marginLeft="@dimen/item_trainer_margin_left"
            android:layout_marginStart="@dimen/item_trainer_margin_left"
            android:layout_toLeftOf="@+id/imageview_flag"
            android:layout_toStartOf="@+id/imageview_flag"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Anna Naklab"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageview_flag"
            android:layout_width="24dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imageview_profile_pic"
            android:layout_margin="4dp"
            android:src="@raw/flag_italy" />

        <TextView
            android:id="@+id/textview_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_name"
            android:layout_marginLeft="@dimen/item_trainer_margin_left"
            android:layout_marginStart="@dimen/item_trainer_margin_left"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="MMA - asdas"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageview_star"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/textview_profession"
            android:layout_marginLeft="@dimen/item_trainer_margin_left"
            android:layout_marginStart="@dimen/item_trainer_margin_left"

            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/textview_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageview_star"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imageview_star"
            android:layout_toRightOf="@id/imageview_star"
            android:text="4.7 (5)"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview_hour_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/textview_rating"
            android:layout_marginEnd="@dimen/item_trainer_margin_left"
            android:maxLines="1"
            android:text="15 KD/hr"
            android:textColor="@color/colorAccent_400"
            android:textSize="13sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>